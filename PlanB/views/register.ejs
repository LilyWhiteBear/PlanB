<%- include("partials/header") %>
<div class="container">
    <% if(locals.errors){ %>
        <ul>
        <% Object.values(errors).forEach(function(error){ %>
            <li><%= error.msg %></li>
        <% }) %> 
        </ul>
    <% } %>
    <form class="form-group" action="/users/register" method="post">
        <div class="form-group">
            <label for="">Username:</label>
            <input type="text" name="usr" value="" class="form-control">
        </div>
        <div class="form-group">
            <label for="">Email:</label>
            <input type="email" name="email" value="" class="form-control">
        </div>
        <div class="form-group">
            <label for="">Password:</label>
            <input type="password" name="pwd" value="" class="form-control">
        </div>
        <input type="submit" name="" value="Register" class="btn btn-primary">
    </form>
</div>
<%- include("partials/footer") %>
